{
  "name": "<%= appId %>",
  "version": "0.1.0",
  "description": "<%= appDesc %>",
  "repository": {
    "type": "git",
    "url": "<%= githubRepo %>"
  },
  <% if(includeAngular === true) { %>
  "engines": {
    "npm": "^4.0.5",
    "node": "^7.4.0"
  },
  <% } %>
  "dependencies": {
	<% if(includeJQuery === true) { %>
  "jquery": "^2.2.0"
  <% } %>
	<% if(includeAngular === true) { %>
  "angular": "^1.6.4",
  "angular-animate": "^1.6.4",
  "angular-ui-router": "^0.3.0",
  "openmrs-contrib-uicommons": "^0.3.29"
  <% } %>
  <% if(includeReact === true) { %>
  "react": "^15.4.1",
  "react-dom": "^15.4.1",
    <% if(includeRedux === true) { %>
    "redux": "^3.6.0",
    "react-redux": "^5.0.1",
    "redux-promise-middleware": "^4.2.0",
    "redux-thunk": "^2.1.0",
    <% } %>
  "react-router": "^3.0.0"
  <% } %>
},
  "devDependencies": {
    <% if(includeAngular === true) { %>
    "ng-annotate-webpack-plugin":"0.1.3",
    <% } %>
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    <% if(includeReact === true) { %>
    "babel-preset-react": "^6.16.0",
    <% } %>
    "browser-sync": "^2.11.1",
    "browser-sync-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.24.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.13",
    "yargs": "^4.3.1",
    "archiver": "^1.0.0",
    "on-build-webpack": "^0.1.0"
  },
  "scripts": {
    "clean": "rimraf dist && rimraf coverage*",
    "build": "npm run clean && webpack --progress --colors --mode=production --target=web",
    "build:dev": "npm run clean && webpack --progress --colors --mode=dev --target=web",
    "build:prod": "npm run test && npm run build",
    "build:deploy": "webpack --progress --colors --mode=deploy --target=web",
    "watch": "webpack --progress --colors --watch --mode=deploy --target=web",
    "test": "echo \"Error: no test specified\""
  },
  "keywords": [
    "OpenMRS",
    "Open",
    "Web",
    "App"
  ],
  "author": "<%= devName %>",
  "license": "MPL-2.0"
}
